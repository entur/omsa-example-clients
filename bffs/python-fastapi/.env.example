# OMSA Demo BFF configuration

# OMSA routing: remote | local
OMSA_MODE=remote
OMSA_REMOTE_BASE_URL=https://api.dev.entur.io/omsa
OMSA_LOCAL_BASE_URL=http://localhost:8080
# Optional explicit override (takes precedence over OMSA_MODE)
#OMSA_BASE_URL=https://custom.omsa.endpoint
SALES_BASE_URL=https://api.dev.entur.io/sales/v1
OAUTH_TOKEN_URL=https://partner.dev.entur.org/oauth/token
AUTH0_AUDIENCE=https://api.dev.entur.io
CLIENT_ID=replace-me
CLIENT_SECRET=replace-me

# Required headers for Entur endpoints
ENTUR_DISTRIBUTION_CHANNEL=KOL:DistributionChannel:App
ET_CLIENT_NAME=omsa
ENTUR_POS=Kolumbus

# Caching
CACHE_TTL_SECONDS=30
CACHE_MAX_SIZE=256

# CORS (comma-separated list, defaults to localhost dev ports)
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://localhost:5555
